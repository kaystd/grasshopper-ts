{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2019",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "declaration": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
